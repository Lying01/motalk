/* pages/mymotalk/myinfo/myinfo.wxss */
page{
    height: 100%;
    width: 100%;
}
.container{
    background: #f4f4f4;
    height: auto;
    overflow: hidden;
    width: 100%;
}
.profile-info{
    width: 100%;
    height: 280rpx;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: flex-start;
    padding: 0 30.25rpx;
    background: #fff;
}

.profile-info .avatar{
    height: 148rpx;
    width: 148rpx;
    border-radius: 50%;
}

.profile-info .info{
    flex: 1;
    height: 100rpx;
    padding-left: 31.25rpx;
}

.profile-info .name{
    display: block;
    height: 70rpx;
    line-height: 45rpx;
    color: #000;
    font-size: 37.5rpx;
    margin-bottom: 10rpx;
}

.profile-info .phone{
    display: block;
    height: 30rpx;
    line-height: 30rpx;
    margin-bottom: 10rpx;
    color: #000;
    font-size: 30rpx;
}

.waveform{
  background-color: #fff;
  margin-top: 30rpx;
  padding: 20rpx;
  font-size: 30rpx;
}

.waveform .title{
  border-left: 2px #b4282d solid;
  border-radius: 2px;
  line-height: 30rpx;
}

.waveform .title text{
  margin-left: 8rpx;
}

.waveform .showform{
  margin-top:20rpx;
  height: 600rpx;
  background-color: #FFCCCC;
}
