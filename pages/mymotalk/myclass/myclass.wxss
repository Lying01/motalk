/* pages/mymotalk/myclass/myclass.wxss */
page,
.page,
.page__bd{
    height: 100%;
}

.page__bd{
    padding-bottom: 0;
}
.weui-navbar {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  position: absolute;
  z-index: 99;
  top: 0;
  width: 100%;
  border-bottom: 1rpx solid #CCCCCC;
  background-color: #fff;
}
.weui-navbar__item {
  position: relative;
  display: block;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  padding: 13px 0;
  text-align: center;
  font-size: 0;
}
.weui-navbar__item.weui-bar__item_on {
  color: #1AAD19;
}
.weui-navbar__slider {
  background-color: #726DD1;
}
.weui-navbar__title {
  display: inline-block;
  font-size: 15px;
  max-width: 8em;
  width: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: normal;
  color:#726DD1;
}
.weui-tab {
  position: relative;
  height: 100%;
}
.weui-tab__panel {
  box-sizing: border-box;
  height: 100%;
  padding-top: 50px;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
}
.weui-tab__content{
    text-align: center;
}
.weui-tab{
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;
}

/*班级列表  */

.classlist {
  margin: 40rpx 20rpx;
  height: 280rpx;
  background-size: cover;
  border-radius: 10rpx;
}

.classlist:first-child{
  margin-top: 30rpx;
}

/*班级课程封面  */
.cover{
  position: absolute;
  float: left;
  margin-top: 20rpx;
  margin-left: 20rpx;
  z-index: 11;
  width: 240rpx;
  height: 240rpx;
  background-color: #CCCCCC;
}

.cover image{
  width: 100%;
  height: 100%;
}

/*班级信息  */
.info {
  position: absolute;
  text-align: left;
  float: left;
  padding-top: 20rpx;
  padding-left: 280rpx;
  line-height: 80rpx;
  font-size: 30rpx;
}

.info text{
  color:#000;
}

.claName{
  width: 430rpx;
  display:block;white-space:nowrap; overflow:hidden; text-overflow:ellipsis;
}

/*查看详情按钮  */
.seeDetail {
  position: absolute;
  float: left;
  margin-top: 195rpx;
  margin-left: 560rpx;
  z-index: 11;
  font-size: 20rpx;
  background-color: #726DD1;
  color: #fff;
}

/*班级成员小头像  */
.classMans{
  position: absolute;
  float: left;
  margin-top: 120rpx;
  margin-left: 410rpx;
  width: 40rpx;
  height: 40rpx;
  border: 1px solid #000;
  border-radius: 50%;
}

.classMans image{
  width: 100%;
  height: 100%;
}