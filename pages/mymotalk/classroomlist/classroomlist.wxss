/* pages/mymotalk/classroomlist/classroomlist.wxss */
/*班级列表  */

.classlist {
  margin: 40rpx 20rpx;
  height: 280rpx;
  background-size: cover;
  border-radius: 10rpx;
}

.classlist:first-child{
  margin-top: 30rpx;
}

/*班级课程封面  */
.cover{
  position: absolute;
  float: left;
  margin-top: 20rpx;
  margin-left: 20rpx;
  z-index: 11;
  width: 240rpx;
  height: 240rpx;
  background-color: #CCCCCC;
}

.cover image{
  width: 100%;
  height: 100%;
}

/*班级信息  */
.info {
  position: absolute;
  text-align: left;
  float: left;
  padding-top: 20rpx;
  padding-left: 280rpx;
  line-height: 80rpx;
  font-size: 30rpx;
}

.info text{
  color:#000;
}

.claName{
  width: 430rpx;
  display:block;white-space:nowrap; overflow:hidden; text-overflow:ellipsis;
}

/*查看详情按钮  */
.seeDetail {
  position: absolute;
  float: left;
  margin-top: 195rpx;
  margin-left: 560rpx;
  z-index: 11;
  font-size: 20rpx;
  background-color: #726DD1;
  color: #fff;
}

/*班级成员小头像  */
.classMans{
  position: absolute;
  float: left;
  margin-top: 120rpx;
  margin-left: 410rpx;
  width: 40rpx;
  height: 40rpx;
  border: 1px solid #000;
  border-radius: 50%;
}

.classMans image{
  width: 100%;
  height: 100%;
}