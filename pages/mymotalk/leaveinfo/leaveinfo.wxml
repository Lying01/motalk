<!--pages/mymotalk/leaveinfo/leaveinfo.wxml-->
<view class="page__bd page__bd_spacing" style='margin-bottom:150rpx;'>
    <view class="kind-list">
        <block wx:for-items="{{list}}" wx:key="{{item.id}}">
            <view class="kind-list__item">
                <view id="{{item.id}}" class="weui-flex kind-list__item-hd {{item.open ? 'kind-list__item-hd_show' : ''}}" bindtap="kindToggle">
                    <view class="weui-flex__item">{{item.name}}</view>
                    <view class="weui-cell__ft weui-cell__ft_in-access" id="{{item.isChecked?'is_checked':''}}"></view>
                </view>
                <view class="kind-list__item-bd {{item.open ? 'kind-list__item-bd_show' : ''}}">
                    <view class="weui-cells {{item.open ? 'weui-cells_show' : ''}}">
                        <block wx:for-items="{{item.pages}}" wx:for-item="page" wx:key="*item">
                            <view class="weui-cell weui-cell_access">
                                <view class="weui-cell__bd">{{page}}</view>
                            </view>
                        </block>
                    </view>
                </view>
            </view>
        </block>
    </view>
</view>


<button class="leave" bindtap='toleave'>我要请假</button>