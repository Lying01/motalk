/* pages/mymotalk/signdetail/signdetail.wxss */
.container-lin{
  padding-bottom: 95rpx
}

.course-info{
  padding-bottom: 30rpx;
  font-size: 0;
  background-color: #fff;
}
.course-image{
  width: 750rpx;
}
.course-name{
  font-size: 16px;
  font-weight: 700;
  padding: 10rpx 20rpx;
  background-color: #fff;
  margin: 0;
}

.class-info-box{
  margin-top: 20rpx;
  padding: 10rpx 0;
  background-color: #fff;
  margin-bottom: 30rpx;
  font-weight: bold;
}

.rou-title{
  width: 500rpx;
  height: 80rpx;
  font-size: 40rpx;
  font-weight: 700;
  line-height: 80rpx;
  /* margin-top: 5rpx; */
  padding-left: 20rpx;
  border-top-right-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
  color: #fff;
  background-color: #726DD1; 
}

.class-detail>view{
  line-height: 100rpx;
  padding-left: 20rpx;
  text-align: center;
}

.classInfo-title{
  font-size:  16px;
  font-weight: 700;
  margin-right: 20rpx;
}


.class-detail image{
  display: inline-block;
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  border-radius: 50%;
  vertical-align: middle
}

.progress{
  height: auto;
  padding: 0 20rpx;
}

.progress progress{
  height: 60rpx;
  padding: 0;
}
.cancel{
  width: 750rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  font-size: 16px;
  font-weight: 700;
  color: #fff;
  background-color: #726DD1;
  border-radius: 0;
}

.course-time{
  margin-left: 20rpx;
}

.tips text{
  display: block;
  font-size: 30rpx;
  text-align: center;
}